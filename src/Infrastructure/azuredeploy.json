{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "MqttConnectionString":{
            "type": "securestring"
        }
    },
    "variables": {
        "prefix": "kees-homeassistant-backend-",
        "functionHostingplanAppName": "[concat(variables('prefix'),'functionHostingPlan')]",
        "functionAppName": "[concat(variables('prefix'),'functions')]",
        "appInsightsAppName": "[concat(variables('prefix'),'appinsights')]",
        "storageAccountName": "[concat(variables('prefix'),'storage')]"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "BlobStorage",
            "name": "[variables('storageAccountName')]",
            "apiVersion": "2016-01-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "accessTier": "Hot"
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2015-04-01",
            "name": "[variables('functionHostingplanAppName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "name": "[variables('functionHostingplanAppName')]",
                "computeMode": "Dynamic",
                "sku": "Dynamic"
            }
        },
        {
            "apiVersion": "2015-08-01",
            "type": "Microsoft.Web/sites",
            "name": "[variables('functionAppName')]",
            "location": "[resourceGroup().location]",
            "kind": "functionapp",
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('functionHostingplanAppName'))]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "AzureWebJobsDashboard",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]"
                        }, 
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "beta"
                        },
                        {
                            "name": "MqttConnection",
                            "value": "[parameters('MqttConnectionString')]"
                        },
                        {
                            "name":"APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value":"[reference(resourceId('Microsoft.Insights/components', variables('applicationInsightsName')), '2014-04-01').InstrumentationKey]"
                        }
                    ]
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('functionHostingplanAppName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]",
                "[resourceId('microsoft.insights/components', variables('appInsightsAppName'))]"
            ]
        },
        {
            "type": "microsoft.insights/components",
            "kind": "Node.JS",
            "name": "[variables('applicationInsightsName')]",
            "apiVersion": "2014-04-01",
            "location": "westeurope",
            "tags": {},
            "properties": {
                "ApplicationId": "[variables('applicationInsightsName')]"
            },
            "dependsOn": []
        }
    ],
    "outputs": {
        "storageAccountName": {
            "type": "string",
            "value": "[variables('storageAccountName')]"
        },
        "storageAccountKey": {
            "type": "string",
            "value": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value]"
        },
        "functionAppName": {
            "type": "string",
            "value": "[reference(variables('cdnProfileEndpointName')).hostName]"
        },
        "applicationInsightsInstrumentationKey": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Insights/components', variables('applicationInsightsName')), '2014-04-01').InstrumentationKey]"
        }
    }
}